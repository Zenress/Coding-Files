<Window x:Class="Exercise_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Checkbox that has 3 states -->
        <CheckBox x:Name="myCheckBox" Content="CheckBox" HorizontalAlignment="Left" Margin="302,202,0,0" VerticalAlignment="Top" IsThreeState="True" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked" Click="myCheckBox_Click"/>
        <!-- Textblock that displays either: Check!, Maybe or nothing. Depending on the state -->
        <TextBlock x:Name="myBlock" HorizontalAlignment="Left" Margin="302,269,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
