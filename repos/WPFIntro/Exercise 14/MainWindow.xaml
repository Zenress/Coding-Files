<Window x:Name="myWindow" x:Class="Exercise_14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Radio buttons that totals up to 3 choices. Red, yellow and green. Only one can be selected-->
        <RadioButton x:Name="Red" Content="Rød" HorizontalAlignment="Left" Margin="296,167,0,0" VerticalAlignment="Top" ClickMode="Press" Checked="Red_Checked"/>
        <RadioButton x:Name="Yellow" Content="Gul" HorizontalAlignment="Left" Margin="296,187,0,0" VerticalAlignment="Top" Checked="Yellow_Checked" />
        <RadioButton x:Name="Green" Content="Grøn" HorizontalAlignment="Left" Margin="296,207,0,0" VerticalAlignment="Top" Checked="Green_Checked"/>

    </Grid>
</Window>
