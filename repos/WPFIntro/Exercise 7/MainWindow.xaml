<Window x:Class="Exercise_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 2 Textboxes for getting the first and the second name -->
        <TextBox x:Name="textBoxFirstname" HorizontalAlignment="Left" Height="23" Margin="355,171,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="textBoxLastname" HorizontalAlignment="Left" Height="23" Margin="355,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="89"/>
        <!-- Button and textblock for displaying the full name-->
        <Button Content="Button" HorizontalAlignment="Left" Margin="360,295,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock x:Name="FullName" HorizontalAlignment="Left" Margin="309,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" TextAlignment="Center"/>

    </Grid>
</Window>
