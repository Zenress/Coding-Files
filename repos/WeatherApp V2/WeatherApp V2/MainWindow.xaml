<Window x:Class="WeatherApp_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp_V2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="InputField" HorizontalAlignment="Center" Height="23" Margin="0,91,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="InputField_TextChanged"/>
        <Label x:Name="TemperatureResult" Content="" HorizontalAlignment="Left" Margin="150,138,0,174" VerticalAlignment="Center" FontSize="30"/>
        <Label x:Name="tempMinMax" Content="" HorizontalAlignment="Left" Margin="337,345,0,0" VerticalAlignment="Top" FontSize="30"/>        
        <Button x:Name="Submit" Content="Button" HorizontalAlignment="Left" Margin="355,119,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"/>
    </Grid>
</Window>
