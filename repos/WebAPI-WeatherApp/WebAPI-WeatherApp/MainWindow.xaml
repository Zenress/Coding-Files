<Window x:Class="WebAPI_WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebAPI_WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Appearance_of_sky_for_weather_forecast,_Dhaka,_Bangladesh.jpg"/>
        </Grid.Background>
        <Button x:Name="submitBtn" Content="Button" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Width="75" Click="submitBtn_Click"/>
        <TextBox x:Name="cityInput" HorizontalAlignment="Center" Height="23" Margin="0,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter City Name" Margin="344,30,348.6,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="101"/>
        <Label x:Name="Result" Content="" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="72" FontFamily="Arial" FontStyle="Italic"/>

    </Grid>
</Window>
